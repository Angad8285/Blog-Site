<%- include("partials/header") -%>
<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <div class="mb-3">
      <label class="form-lable" for="postTitle">Tittle</label>
      <input class="form-control" type="text" name="postTitle" value="" autofocus autocomplete="off">
    </div>
    <div class="mb-3">
      <label class="form-label" for="post">Post</label>
      <textarea class="form-control" name="postBody" rows="8" cols="80" autocomplete="off"></textarea>
    </div>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>


</form>

